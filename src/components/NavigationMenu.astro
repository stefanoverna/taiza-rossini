---
import WhatsappIcon from './WhatsappIcon.astro';

const currentPath = Astro.url.pathname;

interface MenuItemProps {
  href: string;
  children: string;
  isActive: boolean;
}
---

<>
  <div class="h-32 xl:hidden"></div>
  <div
    class="fixed flex z-10 items-center left-0 px-2 xl:px-8 top-10 uppercase font-bold backdrop-brightness-150 text-black bg-white/50"
  >
    <a
      href="/"
      class:list={[
        'p-4 decoration-accent decoration-4 underline-offset-4 hover:underline hover:decoration-accent/25',
        currentPath === '/' && 'underline hover:decoration-accent',
      ]}
    >
      Home
    </a>
    <a
      href="/about"
      class:list={[
        'p-4 decoration-accent decoration-4 underline-offset-4 hover:underline hover:decoration-accent/25',
        currentPath === '/about' && 'underline hover:decoration-accent',
      ]}
    >
      About
    </a>
    <a
      href="/contact"
      class:list={[
        'p-4 decoration-accent decoration-4 underline-offset-4 hover:underline hover:decoration-accent/25',
        currentPath === '/contact' && 'underline hover:decoration-accent',
      ]}
    >
      Contact
    </a>
    <a href="https://wa.me/message/22R7RKDSMVMYC1" class="p-4">
      <WhatsappIcon class="w-[1em]" />
    </a>
  </div>
</>
